# see man termite.config for more information

[options]
allow_bold = true
audible_bell = false
clickable_url = true
hyperlinks = true
cursor_blink = system
cursor_shape = block
dynamic_title = true
filter_unmatched_urls = true
font = DejaVuSansMono 13
fullscreen = true
icon_name = utilities-terminal
mouse_autohide = true
scrollback_lines = 10000
scroll_on_keystroke = true
scroll_on_output = false
search_wrap = false
size_hints = true
urgent_on_bell = true

